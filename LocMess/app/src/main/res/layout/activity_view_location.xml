<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="pt.ulisboa.tecnico.cmov.locmess.ViewLocationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:id="@+id/textView15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/textView15"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/textViewLName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude:"
        android:layout_below="@+id/textViewLName"
        android:layout_marginTop="20dp"
        android:id="@+id/textView16"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/textView16"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/textViewLLatitude"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude:"
        android:layout_below="@+id/textViewLLatitude"
        android:layout_marginTop="20dp"
        android:id="@+id/textView17"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/textView17"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/textViewLLongitude"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radious:"
        android:layout_below="@+id/textViewLLongitude"
        android:layout_marginTop="20dp"
        android:id="@+id/textView18"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/textView18"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/textViewLRadious"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of Points"
        android:layout_below="@+id/textViewLName"
        android:layout_marginTop="20dp"
        android:id="@+id/textView20"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/textView20"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:id="@+id/listViewListDevices"
        android:clickable="true" />


</RelativeLayout>
