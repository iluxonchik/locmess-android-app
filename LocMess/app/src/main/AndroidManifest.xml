<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ulisboa.tecnico.cmov.locmess">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".MainMenuActivity" />
        <activity
            android:name=".MainProfileActivity"
            android:label="@string/title_activity_main_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ViewKeyActivity" />
        <activity
            android:name=".MainLocationsActivity"
            android:label="@string/title_activity_main_locations"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ViewLocationActivity"></activity>
    </application>

</manifest>